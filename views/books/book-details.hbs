<h2>Book Details</h2>
<section class="book-details">
    <h2>{{title}}</h2>
    <p>
        Author: {{author}} <br>
        Rating: {{rating}} <br>
    </p>
    <p>
        <strong>Description: </strong>
        {{description}}
    </p>


    <p>
        <form action="/books/{{_id}}/delete" method ="post"> 
        <button>Delete this book</button>
        </form>
    </p>
</section>
<a href="/books">Back to Main page</a>

